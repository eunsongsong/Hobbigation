<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hobbigation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="Hobbigation"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".CategoryDetailActivity" android:parentActivityName=".TapViewActivity"></activity>
        <activity android:name=".ModifyInfoActivity" />
        <activity android:name=".ModifyInfoFragment" />
        <activity android:name=".ConfirmActivity" />
        <activity android:name=".ForgotPwActivity" />
        <activity android:name=".SubActivity" />
        <activity android:name=".TapViewActivity" />
        <activity android:name=".FavoriteActivity" />
        <activity android:name=".CategoryActivity" />
        <activity android:name=".RecommendationActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".BeforeSignin" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GuideActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SignUpActivity" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>