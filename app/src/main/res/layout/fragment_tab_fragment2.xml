<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#FFFFB400"
            android:enabled="true"
            android:text=" 관심사 선택 "
            android:textAlignment="center"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/favorite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/back_img_culture1"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:background="@drawable/square_states"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/culture1"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="155dp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="문화/공연"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/back_img_music2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/square_states"
                    android:text="@+id/categ_txt2"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/music_text"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="155dp"
                    android:text="음악"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/culture_img"
                        android:layout_width="135dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/show" />

                    <ImageView
                        android:id="@+id/music_img"
                        android:layout_width="138dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/music" />

                </LinearLayout>
            </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageButton
                        android:id="@+id/back_img_art3"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:background="@drawable/square_states"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/art_text"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:text="예술"
                        android:layout_marginTop="155dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/back_img_book4"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/square_states"
                        android:text="@+id/categ_txt2"
                        android:textSize="22sp" />
                    <TextView
                        android:id="@+id/book_text"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="260dp"
                        android:text="책/글"
                        android:layout_marginTop="155dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/art_img"
                            android:layout_width="136dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/art" />

                        <ImageView
                            android:id="@+id/book_img"
                            android:layout_width="142dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/book" />

                    </LinearLayout>
                </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:id="@+id/back_img_sports5"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:background="@drawable/square_states"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/sports_text"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:text="운동/스포츠"
                    android:layout_marginTop="155dp"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/back_img_make6"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/square_states"
                    android:text="@+id/categ_txt2"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/make_text"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="155dp"
                    android:textAlignment="center"
                    android:text="만들기"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sports_img"
                        android:layout_width="132dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/sports" />

                    <ImageView
                        android:id="@+id/make_img"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/craft" />

                </LinearLayout>
            </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageButton
                        android:id="@+id/back_img_food7"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:background="@drawable/square_states"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/food_text"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="155dp"

                        android:text="음식"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/back_img_game8"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/square_states"
                        android:text="@+id/categ_txt2"
                        android:textSize="22sp" />
                    <TextView
                        android:id="@+id/game_text"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="260dp"
                        android:layout_marginTop="155dp"
                        android:textAlignment="center"
                        android:text="게임/오락"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/food_img"
                            android:layout_width="136dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/burger" />

                        <ImageView
                            android:id="@+id/game_img"
                            android:layout_width="137dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/game" />

                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageButton
                        android:id="@+id/back_img_outdoor9"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:background="@drawable/square_states"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/outdoor_text"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="155dp"
                        android:text="아웃도어"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/back_img_plant10"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/square_states"
                        android:text="@+id/categ_txt2"
                        android:textSize="22sp" />
                    <TextView
                        android:id="@+id/plant_text"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="260dp"
                        android:layout_marginTop="155dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:text="식물"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/outdoor_img"
                            android:layout_width="130dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/outdoor" />

                        <ImageView
                            android:id="@+id/plant_img"
                            android:layout_width="142dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/plant" />

                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageButton
                        android:id="@+id/back_img_rest11"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:background="@drawable/square_states"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/rest_text"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="155dp"
                        android:textAlignment="center"
                        android:text="휴식"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/back_img_vol12"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="210dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/square_states"
                        android:textSize="22sp" />
                    <TextView
                        android:id="@+id/volunteer_text"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="260dp"
                        android:layout_marginTop="155dp"
                        android:text="봉사활동"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rest_img"
                            android:layout_width="128dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/sleep" />

                        <ImageView
                            android:id="@+id/volunteer_img"
                            android:background="@drawable/volunteer"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp" />

                    </LinearLayout>
                </FrameLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>
