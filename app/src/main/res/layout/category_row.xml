<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="7dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/back_img1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/square_states"
            android:drawableTop="@+id/categ_img1"
            android:text="@+id/categ_txt1"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/back_img2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/square_states"
            android:drawableTop="@+id/categ_img2"
            android:text="@+id/categ_txt2"
            android:textSize="22sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/categ_img1"
                android:layout_width="180dp"
                android:layout_height="135dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/categ_txt1"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/categ_img1"
                android:textAlignment="center"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/categ_img2"
                android:layout_width="180dp"
                android:layout_height="135dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/categ_txt2"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/categ_img2"
                android:textAlignment="center"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"/>

        </RelativeLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>
