<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryDetailActivity"
    android:orientation="vertical"
    tools:ignore="ScrollViewCount">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/category_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#FFC81E"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/indoor_show_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="실내"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#000000" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_indoor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/outdoor_show_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="야외"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#000000" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_outdoor"/>

    <TextView
        android:id="@+id/part_show_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="참여"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#000000" />


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_part"/>

    <TextView
        android:id="@+id/see_show_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="감상"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#000000" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_see"/>
</LinearLayout>

</ScrollView>