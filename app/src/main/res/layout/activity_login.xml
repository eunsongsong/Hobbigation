<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/sign_email"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:layout_marginTop="151dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/sign_pwd"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:password="true"
        android:layout_below="@+id/sign_email" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Log in"
        android:id="@+id/loginButton"
        android:onClick="signIn"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/sign_pwd"
        android:layout_toStartOf="@+id/move_sign_up"
        android:layout_toLeftOf="@+id/move_sign_up" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="Sign up"
        android:id="@+id/move_sign_up"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/loginButton"
        android:layout_alignEnd="@+id/sign_pwd"
        android:layout_alignRight="@+id/sign_pwd" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember login"
        android:id="@+id/checkBox"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/loginButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/sign_email"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-21dp"
        android:text="이메일과 비밀번호를 입력하세요" />



</RelativeLayout>